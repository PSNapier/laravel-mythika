{
	"overrides": [
		{
			"files": ["*.blade.php"],
			"options": {
				"parser": "blade",
				"tabWidth": 1,
				"sortTailwindcssClasses": true,
				"bracketSameLine": false,
				"wrapAttributes": "force"
			}
		}
	],
	"trailingComma": "all",
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"bracketSameLine": true,
	"printWidth": 240
}
